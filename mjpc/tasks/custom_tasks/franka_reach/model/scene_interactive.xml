<mujoco model="fr3 interactive scene">
  <include file="fr3_torque.xml"/>

  <compiler angle="radian"/>
  
  <statistic center="0.4 0 0.5" extent="1.2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="target_mat" rgba="1 0.2 0.2 0.5"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- Draggable target cube with orientation -->
    <body name="target" pos="0.4 0.2 0.5" mocap="true">
      <geom name="target_cube" type="box" size="0.04 0.04 0.04" rgba="1 0.2 0.2 0.7" contype="0" conaffinity="0"/>
      <!-- Arrow to show orientation -->
      <geom name="target_arrow" type="box" size="0.06 0.01 0.01" pos="0.05 0 0" rgba="1 0.5 0.5 0.9" contype="0" conaffinity="0"/>
      <site name="target_site" size="0.001" pos="0 0 0" euler="3.14159 0 0"/>
    </body>
  </worldbody>
</mujoco>
